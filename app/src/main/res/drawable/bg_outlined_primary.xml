<?xml version="1.0" encoding="UTF-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="150"
    android:exitFadeDuration="150">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="?colorError" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="?colorPrimaryVariant" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="?colorPrimary" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>
